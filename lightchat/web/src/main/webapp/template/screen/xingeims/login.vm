#set($layout = "/template/layout/empty.vm")  
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>浙江信鸽金融服务股份有限公司 - 内部管理系统</title>
    <style type="text/css">
        body {
            background-color: #dfeaf0;
            margin: 0px;
            font-family: 'Microsoft YaHei';
        }

        .banner {
            background: url("data:image/jpeg;base64,");
            background-repeat: repeat-x;
            width: 100%;
            position: absolute;
            top: 50%;
            margin-top: -122px;
            height: 245px;
            color: #eee;
        }

        .banner-cnt {
            margin: 0px auto;
            width: 1000px;
        }

        .left-holder {
            text-align: right;
            float: left;
            margin-top: 80px;
        }

            .left-holder h1, .left-holder h2 {
                display: inline;
                font-weight: normal;
            }

        .right-holder {
            background: url("/resources/img/login.png");
            background-repeat: no-repeat;
            background-position: center;
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            width: 437px;
            height: 381px;
            float: right;
            margin-top: -70px;
            padding-top: 115px;
            padding-left: 148px;
            position: relative;
        }

        .checkCode {
            width: 74px;
            vertical-align: middle;
            cursor: pointer;
        }

        input {
            padding: 3px;
            line-height: 32px;
            font-size: 18px;
            margin-bottom: 24px;
            width: 228px;
            border: none;
            outline: none;
            background: none;
            display: table-cell;
        }

            input[name=checkCode] {
                width: 80px;
            }

            input[type=submit] {
                position: absolute;
                background: url("/resources/img/loginbutton.png");
                width: 226px;
                height: 49px;
                left: 50%;
                margin-left: -110px;
                top: 305px;
                background-repeat: no-repeat;
                background-position: center;
            }
    </style>
</head>
<body>
    <div class="banner">
        <div class="banner-cnt">
            <div class="left-holder">
                <h1>信鸽金服内部管理系统</h1><br />
                <h2>HPBanking internal management system</h2>
            </div>
            <div class="right-holder">
                #if(${SPRING_SECURITY_LAST_EXCEPTION})
                <h3 style="color: red; position: absolute; top: 60px; left: 70px;">${SPRING_SECURITY_LAST_EXCEPTION.message}</h3>
                #end
                <form action="/login.do" method="post">
                    <input type="hidden" name="_csrf" value="$_csrf.token">
                    <input type="text" name="username" autocomplete="off">
                    <input type="password" name="password" autocomplete="off">
                    <input type="text" maxlength="4" name="checkCode" autocomplete="off">
                    <img class="checkCode" src="/checkCode.jpg?_r=$math.getRandom()" onclick="this.src='/checkCode.jpg?_r=' + Math.random()" />
                    <input type="submit" value="">
                </form>
            </div>
        </div>
    </div>
</body>
</html>